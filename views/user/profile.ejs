<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/main.css">
    <title>Document</title>
</head>
<body>
    <header>
        <nav>
            <a href="/cars?page=1">
           <img src="/images/carlogo.png" alt="car logo" class="image"> 
         </a>
           <div class="right-menu">
            <% console.log(user.currentUser)%>
            <% if (user.currentUser) { %>
             
                <a href="/logout">Logout</a> 
            
          </nav>
        </header>
             
            <% }  else { %>
              
                   
                       <a href="/login">Login</a>
                       <a href="/create">Register</a>
                       
            </div> 
                </nav>
                </header>
            <% }%>
    
        
     
      

    
  
    <section>
        <h2>Cars</h2>
        <div class="profileshow">
        <%cars.forEach(car => { %>
            <div class="car">
            <img src="<%=car.img[0]%>"  width="200px" height="200px">
       
            <p><a href="/cars/<%= car._id %>"><%= car.name %> </a></p>
             <p>Price: <%= car.price %> </p>   
           
           
            <% if(flag){ %>
                <a href="/cars/<%= car._id %>/edit">Edit</a>
                <p>
                <form action="/cars/<%= car._id %>?_method=DELETE" method="POST">
                <input type="submit" value="Delete">
            </form>
        </p>
    
            <% }%>
        </div>       
        <% }) %>

        </div>
    </section>
    <section class="addcar">
    <%if(flag){%>  
        <a href="/cars/new" >Add New car</a>
        <form action="/delacc/<%=userProfile.id%>?_method=Delete" method="post">
            <input type="submit" value="Delacc" class="delete" >
        </form>
          <% } %> 
        </section>
</body>
</html>