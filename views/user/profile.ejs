<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/nav.css">
    <link rel="stylesheet" href="/styles/main.css">
    
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+HK:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  
    <title>Document</title>
</head>
<body>
    <header>
        <nav>
            <a href="/cars/1">
           <img src="/images/logo2.png" alt="car logo" class="image"> 
         </a>
           <div class="right-menu">
            <% if (user.currentUser) { %>
                
                <a href="/logout">Logout</a> 
                
          </nav>
        </header>
             
            <% }  else { %>
              
                       <a href="/login">Login</a>
                       <a href="/create">Register</a>
                       
            </div> 
                </nav>
                </header>
            <% }%>
  
    <section>
        <section class="addcar">
            <%if(flag){%>  
                <a href="/cars/new" id="add">Add New Car</a>
                <%let properChatNames=0%>
                <% for( let index = 0; index < chat.length; index++ ) { %>
                    <a class="chatwith" href="<%=chat[index]%>">Chat with <%=who[properChatNames]%> - <%=who[properChatNames+1]%> </a>
                <% properChatNames+=2 } %>
                  <% } %> 
                </section>
        <div class="container1">
        <%cars.forEach(car => { %>
            <div class="car">
                <a href="/cars/<%= car._id %>/new">
            <img src="<%=car.img[0]%>"  width="215px" height="175px">
        </a>
            <div class="name">
                 <%= car.name %> 
            </div>
            <div class='text'>
             $<%= car.price %>  
            </div>
           
            <% if(flag){ %>
              
                    <div class="edit">
                        <a href="/cars/<%= car._id %>/edit" >Edit</a>
                    </div>
                
               <p>
                <form action="/cars/<%= car._id %>?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="delete">
            </form>
        </p>
    
            <% }%>
        </div>       
        <% }) %>

        </div>
    </section>
  
        
</body>
</html>