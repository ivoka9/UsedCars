<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/main.css">
    <title>Document</title>
</head>
<body>
    <header>
        <nav>
            <a href="/cars">
            <img src="/images/carlogo.png" alt="car logo" class="image">
           </a>
          
        </nav>
        </header>
    
        
     
      

    <h1>Profile page of <%=userProfile.Username%></h1>
    <%if(flag){%>  
    <a href="/cars/new">Add New car</a>
      <% } %> 
    <section>
        <h2>Cars</h2>
        <%cars.forEach(car => { %>
                <a href="/cars/<%= car._id %>"><%= car.name %> </a>
            Price: <%= car.price %> 
            <% if(flag){ %>
                <img src="<%=car.img[0]%>"  width="100px" height="100px">
                <a href="/cars/<%= car._id %>/edit">Edit</a>
                <form action="/cars/<%= car._id %>?_method=DELETE" method="POST">
                <input type="submit" value="Delete">
            </form>
            <% }%>
            
        <% }) %>
        <% if(flag){ %>
            <form action="/delacc/<%=userProfile.id%>?_method=Delete" method="post">
                <input type="submit" value="Delacc">
            </form>
            <% }%>

    </section>
    
</body>
</html>