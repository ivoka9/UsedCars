        <% }  else { %>
          
               
                   <a href="/login">Login</a>
                   <a href="/create">Register</a>
                   
        </div> 
            </nav>
            </header>
        <% }%>
         
 <section class="advertise">

 </section>
 <form action="/cars" method="get">
<select id="sortby" name="sortby">
  <option value="price">Price</option>
  <option value="mil">Miles</option>
  <option value="year">Year</option>
  </select>
  <button type="submit">Submit</button>

 <div class = "container1">
  <%  page= Number(page);  %>
  <nav aria-label="..." name='nav'>
    <ul class="pagination pagination-lg" name='ul'>
      <li class="page-item " name='page'> 
      
          <a class="page-link"  
          <%if(page-1!=0){%>
          href="?page=<%=page-1%>"  
          <%} %>
          >Previus</a>    
      </li>
      <li class="page-item " name='page'> 
       
          <a class="page-link" href="?page=<%=page%>"  ><%=page%></a>    
             
      </li>
      <li class="page-item " name='page'> 
          <a class="page-link" 
          <%if(page<=(cars.length/3)){%>
            href="?page=<%=page+1%>"  
            <%} %>
          >Next</a>    
             
      </li>
    </ul>
  </nav>
 
   <% for( let i =0+((3*page)-3) ; i < cars.length && i < 3*(page) ; i++) { %>
    <div class="car">
      <img src="<%=cars[i].img[0]%>"  height="150px" width="150px" alt="" srcset="">
      <%= cars[i].secondid.length %>
      <div class="name">
      <a href="/cars/<%= cars[i]._id %>"><%= cars[i].name %> </a>
      </div>  
      <div class='text'>
      Price: <%= cars[i].price %>
      </div>  
    </div>
      <% } %>
</div>
<footer class = "footer">

</footer>
</body>
</html>